@{
}
@model IEnumerable<NETCORE_Lesson02.Models.Category>;

<h2>List Category</h2>

<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Tên
            </th>
            <th>
                Mô tả
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var cate in Model)
        {
            <tr>
                <td>
                    @cate.Id
                </td>
                <td>
                    @cate.Name
                </td>
                <td>
                    @cate.Description
                </td>
            </tr>

        }

    </tbody>
</table>
