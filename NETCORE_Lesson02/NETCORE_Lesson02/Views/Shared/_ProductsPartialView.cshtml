@model IEnumerable<NETCORE_Lesson02.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var products = ViewData.Model as List<Product>;
}
<h2>List sản phẩm</h2>

<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Tên
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Giá
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pro in products)
        {
            <tr>
                <td>
                    @pro.Id
                </td>
                <td>
                    @pro.Name
                </td>
                <td>
                    @pro.Description
                </td>
                <td>
                    @pro.Price
                </td>
            </tr>

        }

    </tbody>
</table>