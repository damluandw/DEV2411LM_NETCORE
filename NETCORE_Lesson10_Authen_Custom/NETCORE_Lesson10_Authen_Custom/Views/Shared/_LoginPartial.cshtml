@{
}
@using Microsoft.AspNetCore.Identity;

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a  class="nav-link"> @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Logout" class="nav-link">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Register" class="nav-link">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Login" class="nav-link">Login</a>
        </li>
    }
   
</ul>